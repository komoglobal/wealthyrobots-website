{
  "cleanUrls": true,
  "trailingSlash": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "no-referrer-when-downgrade" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "routes": [
    { "src": "/articles/index.html", "dest": "/articles/" },
    { "src": "/strategies/index.html", "dest": "/strategies/" },
    { "src": "/tools/index.html", "dest": "/tools/" },
    { "src": "/resources/index.html", "dest": "/resources/" },
    { "src": "/about/index.html", "dest": "/about/" },
    { "src": "/contact/index.html", "dest": "/contact/" }
  ],
  "redirects": [
    { "source": "/(.*)", "destination": "/404.html", "statusCode": 404 }
  ]
}
