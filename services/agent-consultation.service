[Unit]
Description=Algofund Agent Consultation System
After=network.target
Wants=network.target

[Service]
Type=oneshot
User=ubuntu
WorkingDirectory=/home/ubuntu/wealthyrobot
Environment=PYTHONPATH=/home/ubuntu/wealthyrobot
ExecStart=/home/ubuntu/wealthyrobot/.venv/bin/python -m algofund.agents.consultation_system
StandardOutput=append:/home/ubuntu/wealthyrobot/logs/agent-consultation.out
StandardError=append:/home/ubuntu/wealthyrobot/logs/agent-consultation.err

[Install]
WantedBy=multi-user.target
